extends layouts/main-layout.pug 

block styles
    link(rel="stylesheet", href="/css/product.css")
block content  
    main
        if prods.length > 0
            .grid 
                each product in prods 
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title} 
                        div.card__image 
                            img(src="https://www.ukrgate.com/eng/wp-content/uploads/2021/02/The-Ukrainian-Book-Institute-Purchases-380.9-Thousand-Books-for-Public-Libraries1.jpeg", alt="book-image")
                        div.card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many interesting things 
                        div.card__actions 
                            button.btn Add to Cart 
        else
            h1 No Products
